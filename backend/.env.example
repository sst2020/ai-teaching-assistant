# ============================================
# AI Teaching Assistant Backend Configuration
# ============================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control!

# ============================================
# Application Settings
# ============================================
APP_NAME="AI Teaching Assistant API"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Server Settings
# ============================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ============================================
# CORS Settings
# ============================================
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# ============================================
# API Settings
# ============================================
API_V1_PREFIX=/api/v1

# ============================================
# AI/LLM Settings
# ============================================
# OpenAI-compatible API Configuration (required for AI features)
# Supports OpenAI, DeepSeek, and other compatible providers
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
# For DeepSeek: OPENAI_API_BASE=https://api.deepseek.com/v1
OPENAI_ORG_ID=
AI_MODEL=gpt-4
# For DeepSeek: AI_MODEL=deepseek-chat or deepseek-coder
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30

# Local LLM Configuration (optional - for offline operation)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL_PATH=

# ============================================
# Database Settings
# ============================================
DATABASE_URL=sqlite:///./teaching_assistant.db
DATABASE_ECHO=false

# ============================================
# Redis/Cache Settings (optional)
# ============================================
REDIS_URL=
CACHE_TTL=3600

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# ============================================
# Code Analysis Settings
# ============================================
MAX_LINE_LENGTH=120
COMPLEXITY_THRESHOLD=10
MIN_MAINTAINABILITY_INDEX=20.0

# ============================================
# Plagiarism Detection Settings
# ============================================
PLAGIARISM_THRESHOLD=0.7
STORE_SUBMISSIONS=true

# ============================================
# Security Settings
# ============================================
# IMPORTANT: Change this in production!
SECRET_KEY=change-this-in-production-use-a-secure-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

