# AI Teaching Assistant - Staging Environment Configuration
# This file is for staging/testing environment

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Database Settings
# =============================================================================
# PostgreSQL for staging
POSTGRES_USER=ai_teaching_staging
POSTGRES_PASSWORD=${STAGING_DB_PASSWORD}
POSTGRES_DB=ai_teaching_staging
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_ECHO=false

# =============================================================================
# Redis Settings
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# =============================================================================
# Security Settings
# =============================================================================
# Use a strong, unique secret key for staging
SECRET_KEY=${STAGING_SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI/LLM Settings
# =============================================================================
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Local LLM (optional)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL_PATH=

# DeepSeek API (set USE_DEEPSEEK=true to enable)
USE_DEEPSEEK=false
DEEPSEEK_API_KEY=${STAGING_DEEPSEEK_API_KEY}
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_MAX_RETRIES=3
DEEPSEEK_RETRY_DELAY=1.0

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=80

# =============================================================================
# CORS Settings
# =============================================================================
# Update with your staging domain
CORS_ORIGINS=["https://staging.your-domain.com"]

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".py", ".js", ".ts", ".java", ".cpp", ".c", ".h", ".hpp"]

# =============================================================================
# Plagiarism Detection Settings
# =============================================================================
PLAGIARISM_THRESHOLD=0.7
STORE_SUBMISSIONS=true

# =============================================================================
# Monitoring & Logging
# =============================================================================
# SENTRY_DSN=${STAGING_SENTRY_DSN}
# PROMETHEUS_ENABLED=true

