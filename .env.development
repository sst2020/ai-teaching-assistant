# AI Teaching Assistant - Development Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# Database Settings
# =============================================================================
# SQLite for local development (default)
DATABASE_URL=sqlite:///./teaching_assistant.db
DATABASE_ECHO=true

# PostgreSQL for Docker development (uncomment if using docker-compose)
# POSTGRES_USER=ai_teaching
# POSTGRES_PASSWORD=ai_teaching_dev
# POSTGRES_DB=ai_teaching_assistant
# POSTGRES_PORT=5432
# DATABASE_URL=postgresql+asyncpg://ai_teaching:ai_teaching_dev@localhost:5432/ai_teaching_assistant

# =============================================================================
# Redis Settings (Optional)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PORT=6379

# =============================================================================
# Security Settings
# =============================================================================
# WARNING: Change this in production!
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI/LLM Settings
# =============================================================================
# OpenAI API (leave empty to use local fallback)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Local LLM (optional)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL_PATH=

# DeepSeek API (set USE_DEEPSEEK=true to enable)
USE_DEEPSEEK=false
DEEPSEEK_API_KEY=
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_MAX_RETRIES=3
DEEPSEEK_RETRY_DELAY=1.0

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".py", ".js", ".ts", ".java", ".cpp", ".c", ".h", ".hpp"]

# =============================================================================
# Plagiarism Detection Settings
# =============================================================================
PLAGIARISM_THRESHOLD=0.7
STORE_SUBMISSIONS=true

