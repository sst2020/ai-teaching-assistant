# AI Teaching Assistant - Production Environment Configuration
# WARNING: Never commit this file with real credentials!
# Use environment variables or secrets management in production.

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=WARNING

# =============================================================================
# Database Settings
# =============================================================================
# PostgreSQL for production
POSTGRES_USER=${PROD_DB_USER}
POSTGRES_PASSWORD=${PROD_DB_PASSWORD}
POSTGRES_DB=${PROD_DB_NAME}
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${PROD_DB_HOST}:5432/${POSTGRES_DB}
DATABASE_ECHO=false

# =============================================================================
# Redis Settings
# =============================================================================
REDIS_URL=redis://${PROD_REDIS_HOST}:6379/0
REDIS_PORT=6379

# =============================================================================
# Security Settings
# =============================================================================
# CRITICAL: Use a strong, unique secret key!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=${PROD_SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI/LLM Settings
# =============================================================================
OPENAI_API_KEY=${PROD_OPENAI_API_KEY}
OPENAI_API_BASE=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Local LLM (optional - for cost reduction)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL_PATH=

# DeepSeek API (set USE_DEEPSEEK=true to enable)
USE_DEEPSEEK=false
DEEPSEEK_API_KEY=${PROD_DEEPSEEK_API_KEY}
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_MAX_RETRIES=3
DEEPSEEK_RETRY_DELAY=1.0

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=443

# =============================================================================
# CORS Settings
# =============================================================================
# Update with your production domain(s)
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".py", ".js", ".ts", ".java", ".cpp", ".c", ".h", ".hpp"]

# =============================================================================
# Plagiarism Detection Settings
# =============================================================================
PLAGIARISM_THRESHOLD=0.7
STORE_SUBMISSIONS=true

# =============================================================================
# Monitoring & Logging
# =============================================================================
SENTRY_DSN=${PROD_SENTRY_DSN}
PROMETHEUS_ENABLED=true

# =============================================================================
# SSL/TLS Settings
# =============================================================================
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# Backup Settings
# =============================================================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=30

